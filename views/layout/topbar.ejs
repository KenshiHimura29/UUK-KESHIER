<header class="topbar">
    <button id="toggleSidebar" class="sidebar-toggle-btn" aria-label="Toggle Sidebar">
        <!-- SVG hamburger icon -->
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
            <rect y="4" width="24" height="3" rx="1.5" fill="#7f53ac"/>
            <rect y="10.5" width="24" height="3" rx="1.5" fill="#7f53ac"/>
            <rect y="17" width="24" height="3" rx="1.5" fill="#7f53ac"/>
        </svg>
    </button>
    <div class="topbar-title">
        <%= typeof pageTitle !== 'undefined' ? pageTitle : 'Dashboard' %>
    </div>
    <div class="topbar-profile">
        <img src="/img/user.png" alt="User" class="profile-img" height="45"/>
        <div class="profile-info">
            <div class="profile-name"><%= user.username %></div>
            <div class="profile-role"><%= user.role %></div>
        </div>
    </div>
</header>
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('toggleSidebar').onclick = function() {
        const sidebar = document.querySelector('.gradient-sidebar');
        const mainContent = document.querySelector('.main-content');
        const topbar = document.querySelector('.topbar'); // Tambah baris ini
        sidebar.classList.toggle('active');
        mainContent.classList.toggle('sidebar-hidden');
        topbar.classList.toggle('sidebar-hidden'); // Tambah baris ini
    };
});
</script>